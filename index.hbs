<style>
.custom-glow-white {
    filter: drop-shadow(0px 0px 22px rgb(255 255 255 / 0.5));
    animation: glow-white 5s ease-in-out infinite, custom-reveal 3s;
}

@keyframes glow-white {
    0% {
        filter: drop-shadow(0px 0px 22px rgb(255 255 255 / 0.5));
    }
    50% {
        filter: drop-shadow(0px 0px 0px rgb(255 255 255 / 0.5));
    }
}

.custom-grow {
    overflow: hidden;
    animation: reveal 5s;
}

.custom-grow img {
    animation: slidein 5s;
}

@keyframes slidein {
    0% { margin-left: -900px; }
    50% { margin-left: -900px; }
    90% { margin-left: 0; }
    100% { margin-left: 0; }
}

@keyframes reveal {
    0% { opacity:0; width:0px; }
    50% { opacity:0; width:0px; }
    90% { opacity:1; width: 100%; }
    100% { opacity:1; }
}
</style>

<div class="w-full bg-black flex justify-center py-24 md:py-96" >
    <div
        class="flex flex-row justify-center items-center gap-4 md:gap-16 lg:gap-20"
    >
        <img
            class="custom-glow-white h-[44px] md:h-[176px] lg:h-[221px]"
            src="{{asset 'images/it_logo.svg'}}"
        />
        <div
            class="custom-grow"
        >
