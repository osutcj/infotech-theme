<style>
.custom-glow-white {
    filter: drop-shadow(0px 0px 22px rgb(255 255 255 / 0.5));
    animation: glow-white 5s ease-in-out infinite;
}

@keyframes glow-white {
    0% {
        filter: drop-shadow(0px 0px 22px rgb(255 255 255 / 0.5));
    }
    50% {
        filter: drop-shadow(0px 0px 0px rgb(255 255 255 / 0.5));
    }
}

.custom-grow {
    animation: custom-grow;
}
@keyframes custom-grow {
    0% {
        
    }
}
</style>

<div class="w-full bg-black flex justify-center py-96">
    <div
        class="flex flex-row justify-center items-center"
    >
        <img
            class="custom-glow-white"
            src="{{asset 'images/it_logo.svg'}}"
        />
        <img
            class="custom-grow"
            src="{{asset 'images/it_logo_text.svg'}}"
        />
    </div>
</div>


{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner posts">

        <div class="post-feed{{#match @custom.feed_layout "List"}} list{{/match}}">
            {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

            {{/foreach}}
        </div>

    </div>
</main>
